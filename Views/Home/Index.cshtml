@model IEnumerable<AllForOne_Store.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to AllForOne Store</h1>
    <p>Browse our collection of soccer jerseys, shoes, and more! Shop now and enjoy the best deals on your favorite items.</p>
    <a href="/Products" class="btn btn-primary">Browse Products</a>
</div>

<div class="text-center mt-4">
    <h2>Featured Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>@product.Price</strong></p>
                        <a href="/Products/Details/@product.ProductId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="text-center mt-4">
    <h3>Shop by Category</h3>
    <div class="row">
        <div class="col-md-4">
            <a href="/Products/Category/1" class="btn btn-outline-primary btn-block">Soccer Jerseys</a>
        </div>
        <div class="col-md-4">
            <a href="/Products/Category/4" class="btn btn-outline-primary btn-block">Shoes</a>
        </div>
        <div class="col-md-4">
            <a href="/Products/Category/5" class="btn btn-outline-primary btn-block">Clothing</a>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <h3>Stay Updated!</h3>
    <p>Sign up for our newsletter and get the latest updates on new arrivals and exclusive discounts.</p>
    <a href="/Account/Register" class="btn btn-success">Sign Up</a>
</div>
